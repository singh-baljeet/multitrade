<head>

    <title>Canvas Admin - Login</title>

    <meta charset="utf-8" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <link rel="stylesheet" href="~/Content/stylesheets/reset.css" type="text/css" media="screen" title="no title" />
    <link rel="stylesheet" href="~/Content/stylesheets/text.css" type="text/css" media="screen" title="no title" />
    <link rel="stylesheet" href="~/Content/stylesheets/buttons.css" type="text/css" media="screen" title="no title" />
    <link rel="stylesheet" href="~/Content/stylesheets/theme-default.css" type="text/css" media="screen" title="no title" />
    <link rel="stylesheet" href="~/Content/stylesheets/login.css" type="text/css" media="screen" title="no title" />
</head>

<body>

    <div id="login">
        <h1>Dashboard</h1>
        <div id="login_panel">
            @using (Html.BeginForm("ForgotPassword", "SuperAdmin", FormMethod.Post))
            {
                <div class="login_fields">
                    <div class="field">
                        <label for="email">Username</label>
                        @Html.TextBox("username",null, new { placeholder = "username" })
                    </div>

                    <div class="field">
                        <label for="Mobile Number">Mobile Number <small>@Html.ActionLink("Login","Login","SuperAdmin")</small></label>
                        @Html.TextBox("mobilenumber",null, new { placeholder = "Mobile Number" })
                    </div>
                </div> <!-- .login_fields -->

                <div class="login_actions">

                    <span>
                        <button type="submit" class="btn btn-primary" tabindex="3">Login</button>
                    </span>

                    @if (ViewBag.ErrorMessage)
                    {
                        <span style="color: red;font-size: 15px;margin-left:50px">
                            Invalid Login Attempt
                        </span>
                    }
                    @if (ViewBag.MobileErrorMessage)
                    {
                        <span style="color: red;font-size: 15px;margin-left:50px">
                            Invalid Mobile Number
                        </span>
                    }
                    @if (ViewBag.SmsStatusMessage)
                    {
                        <span style="color: red;font-size: 15px;margin-left:50px">
                            Password sending failed
                        </span>
                    }
                    @if (ViewBag.SuccessMessage)
                    {
                        <span style="color: red;font-size: 15px;margin-left:50px">
                            Password send to your registered phone successfully
                        </span>
                    }
                </div>

            }
        </div> <!-- #login_panel -->
    </div> <!-- #login -->

    <script src="~/Content/javascripts/all.js"></script>


</body>
</html>